<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#000000"
                                                   android:padding="1dp" android:paddingStart="1dp"
                                                   android:paddingLeft="1dp" android:paddingTop="1dp"
                                                   android:paddingEnd="1dp" android:paddingRight="1dp"
                                                   android:paddingBottom="1dp">


    <CalendarView
            android:layout_gravity="center"
            android:id="@+id/calendarTrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/usericon"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/morado"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/nombreUsuarioLogeado"
            android:text="@string/Nombre_del_notas"
            android:layout_width="193dp"
            android:layout_height="31dp"
            app:layout_constraintEnd_toStartOf="@+id/profile_image"
            android:layout_marginEnd="98dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.911" android:minHeight="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>