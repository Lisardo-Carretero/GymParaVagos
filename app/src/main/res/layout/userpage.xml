<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#000000"
                                                   android:padding="1dp" android:paddingStart="1dp"
                                                   android:paddingLeft="1dp" android:paddingTop="1dp"
                                                   android:paddingEnd="1dp" android:paddingRight="1dp"
                                                   android:paddingBottom="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:src="@drawable/usericon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/nombreUsuarioLogeado"
            android:text="@string/Nombre_del_notas"
            android:layout_width="193dp"
            android:layout_height="31dp"
            app:layout_constraintEnd_toStartOf="@+id/profile_image"
            android:layout_marginEnd="98dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="1.0" android:minHeight="48dp"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="?attr/actionModePasteDrawable"
            android:id="@+id/addTabla"

            android:cropToPadding="false" android:adjustViewBounds="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioLogeado"
            android:layout_marginStart="36dp"/>
    <ImageButton
            android:layout_width="55dp"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:layout_height="55dp" app:srcCompat="@drawable/entrenamiento" android:id="@+id/addEntrenamiento"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/addTabla" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintVertical_bias="0.163"/>

    <TextView

            android:text="@string/iniciar_entrenamiento"
            android:layout_width="wrap_content"
            android:layout_height="19dp" android:id="@+id/textView3"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/addEntrenamiento"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="356dp" android:layout_marginTop="115dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.005" app:layout_constraintVertical_bias="0.071"/>
    <TextView
            android:text="Crear Tabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginTop="148dp" app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioLogeado"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="256dp"
            app:layout_constraintStart_toEndOf="@+id/addTabla" android:layout_marginStart="17dp"
            app:layout_constraintHorizontal_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>